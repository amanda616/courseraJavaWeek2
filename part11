/*This is for week 2 in Duke Coursera Java 
This program is meant to find a gene in a string of
dna, test to check it is a multiple of three then 
printout the gene as s string
*/
public class Part1 {
 public String findSimpleGene(String dna) {
	String result = "";
	int startIndex = dna.indexOf("ATG");
    int stopIndex = dna.indexOf("TAA", startIndex+3);
    result = dna.substring(startIndex, stopIndex+3);   
    return result;}


public void testFindSimpleGene() {
	String dna = "ATTGCGTAATATGGT";
	System.out.println("DNA strand is " + dna);
	String gene = findSimpleGene(dna);
	System.out.println("Gene is " + gene);
	
	dna = "AATGCTAGGGTAATAGGT";
	System.out.println("DNA strand is " + dna);
	gene = findSimpleGene(dna);
	System.out.println("Gene is " + gene);
	
	dna = "ATCCTATGCTTCGGCTGCTCTAATATGGT";
	System.out.println("DNA strand is " +dna);
	gene = findSimpleGene(dna);
	System.out.println("Gene is " + gene);
	
	dna = "ATGTAA";
	System.out.println("DNA is " + dna);
	gene = findSimpleGene(dna);
	System.out.println("Gene is " + gene);
}
